<%= stylesheet_link_tag 'signupin', media: 'all', 'data-turbolinks-track' => true %>
<style type="text/css">
  body {
    /*background-color: #DADADA;*/
  }
  body > .grid {
    height: 100%;
  }
  .image {
    margin-top: -100px;
  }
  .column {
    width: 100% !important;
    max-width: 450px !important;
  }
  .holder {
    height: 800px
  }
  .holder .middle {
    height: 100%
  }
  .ui.check_box {
    float: left;
  }
</style>
  
<div class="holder">
<div class="ui middle aligned center aligned grid">
  <div class="column">
  <h2 class='ui orange image header'>
      로그인
    </h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "ui large form"}) do |f| %>
<div class="ui raised segment">
  <div class="ui field">
    <%= f.label :email, :class => 'ui left aligned header' %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="ui field">
    <%= f.label :password, :class => 'ui left aligned header' %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class= "ui check_box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => 'ui fluid small yellow submit button' %>
  </div>
<% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
