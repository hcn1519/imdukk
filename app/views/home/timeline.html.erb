<script>
$(document).ready(function(){
    $('.button').on('click',function(e) {
        
        if ($(this).hasClass('black')) {
            $('.cards').removeClass('ui three stackable cards').addClass('ui one stackable cards');
            $('.button').removeClass('black').addClass('red');
        }
        
        else if($(this).hasClass('red')) {
            $('.cards').removeClass('ui one stackable cards').addClass('ui three stackable cards');
             $('.button').removeClass('red').addClass('black');
        }
        
    });
});
</script>

